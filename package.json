{
  "name": "ts-node-react-starter",
  "version": "1.0.0",
  "description": "Starter project for Typescript NodeJS.",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"nodemon --watch src --exec ts-node src/server.ts\" \"npm run dev-server --prefix src-client\"",
    "build": "tsc && npm run build --prefix src-client",
    "build:watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json && npm run lint --prefix src-client",
    "debug": "node --inspect-brk --require ts-node/register --require tsconfig-paths/register src/server.ts",
    "debug:watch": "nodemon --watch src --exec node --inspect-brk --require ts-node/register --require tsconfig-paths/register src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "deskoh",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.11.0"
  }
}
